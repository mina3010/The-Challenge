<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/catNameResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Category"
            android:textSize="25sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight=".8"></TextView>
        <TextView
            android:id="@+id/levelResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_weight="1.2"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginRight="-20dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.1">
            <TextView
                android:id="@+id/scoreResult"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="7"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1.2"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="/"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_weight="1.3"></TextView>
            <TextView
                android:id="@+id/scoreResult2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="20"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_weight=".8"></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:src="@drawable/star_empty"
            android:textAlignment="center"
            android:layout_weight=".88"/>

    </LinearLayout>

</LinearLayout>